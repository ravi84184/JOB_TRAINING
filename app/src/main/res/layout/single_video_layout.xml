<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="#ffffff"
    android:id="@+id/relLayout1">

    <ImageView
        android:id="@+id/video_single_image"
        android:src="@drawable/common_google_signin_btn_icon_dark"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_toRightOf="@+id/video_single_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/video_single_name"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="DISPLAY VIDEO NAME"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/video_single_size"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:text="size = 15.8mb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="end"
                android:id="@+id/video_single_duration"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:text="1 hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp" />
        </LinearLayout>



    </LinearLayout>




</RelativeLayout>